<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="5dp"
    >

    <RelativeLayout
        android:id="@+id/rl_first"
        android:background="#f5f5f5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/iv_store"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <LinearLayout
            android:layout_toRightOf="@+id/iv_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bánh Dày Làng Gầu - Thôn Vàng"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                />

            <RatingBar
                android:id="@+id/rb_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="3.1"
                android:stepSize="0.1"
                android:scaleY="0.75"
                android:scaleX="0.75"
                android:transformPivotX="0dp"
                android:transformPivotY="0dp"
                android:isIndicator="false"
                style="@style/foodRatingBar"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thôn Vàng, Xã Cửu Cáo, Huyện Văn G...."
                android:maxLines="1"
                android:textColor="@android:color/darker_gray"
                />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_second"
        android:layout_below="@+id/rl_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_review"
        >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xếp hạng tổng thể (*)"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            />
        <RelativeLayout
            android:layout_below="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RatingBar
                android:id="@+id/rb_store_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="3.1"
                android:stepSize="0.1"
                android:scaleY="0.75"
                android:scaleX="0.75"
                android:transformPivotX="0dp"
                android:transformPivotY="0dp"
                android:isIndicator="false"
                style="@style/foodRatingBar"
                />

            <TextView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đánh giá"
                android:textColor="@android:color/darker_gray"
                />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_third"
        android:layout_below="@+id/rl_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/title_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiêu đề (*)"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            />

        <TextView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đánh giá"
            android:textColor="@android:color/darker_gray"
            />

        <RelativeLayout
            android:layout_below="@+id/title_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_editext"
            >

            <EditText
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/rl_third"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/title_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nội dung (*)"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        />

    <TextView
        android:layout_alignParentRight="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="* Tối thiểu 100 ký tự"
        android:textColor="@android:color/darker_gray"
        />

    </RelativeLayout>

</RelativeLayout>